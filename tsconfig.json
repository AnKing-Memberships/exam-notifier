{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "include": ["ts/**/*"],
    "compilerOptions": {
        "target": "es6",
        "strict": true,
        /* Svelte template variables, e.g. on:event or @const, cannot be typed yet */
        "noImplicitAny": false,
        "isolatedModules": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "typeRoots": ["node_modules/@types", "../anki/ts/typings"],
    }
}
